<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kati.domain.nnew.login.LoginActivity">

    <com.plim.kati_app.kati.crossDomain.domain.view.etc.JSHToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:button_image="@drawable/jsh_close"
        app:layout_constraintTop_toTopOf="parent"
        app:title="" />

    <TextView
        android:id="@+id/loginActivity_KatiIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginActivity_KatiIcon_text"
        android:textColor="@color/kati_red"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/loginActivity_emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15sp"
        android:hint="@string/loginActivity_emailTextView_text"
        android:padding="8dp"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/loginActivity_KatiIcon"
        tools:layout_editor_absoluteX="99dp" />

    <EditText
        android:id="@+id/loginActivity_passwordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15sp"
        android:hint="@string/loginActivity_passwordTextView_text"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="@drawable/edittext_bg"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/loginActivity_emailTextView"
        tools:layout_editor_absoluteX="93dp" />

    <CheckBox
        android:id="@+id/loginActivity_autoLoginCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginActivity_autoLoginCheckBox_text"
        android:textSize="13sp"
        android:textColor="@android:color/tab_indicator_text"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginActivity_passwordTextView" />

    <TextView
        android:id="@+id/loginActivity_findIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="@string/loginActivity_findIdTextView_text"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/loginActivity_findPasswordTextView"
        app:layout_constraintEnd_toStartOf="@+id/loginActivity_splitText"
        app:layout_constraintTop_toTopOf="@+id/loginActivity_findPasswordTextView" />

    <View
        android:id="@+id/loginActivity_splitText"
        android:layout_width="0.5dp"
        android:layout_height="10dp"
        android:layout_marginRight="8dp"
        android:background="@color/kati_dark_gray"
        app:layout_constraintBottom_toBottomOf="@+id/loginActivity_findPasswordTextView"
        app:layout_constraintEnd_toStartOf="@+id/loginActivity_findPasswordTextView"
        app:layout_constraintTop_toTopOf="@+id/loginActivity_findPasswordTextView" />

    <TextView
        android:id="@+id/loginActivity_findPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:textSize="13sp"
        android:text="@string/loginActivity_findPasswordTextView_text"
        app:layout_constraintBottom_toBottomOf="@+id/loginActivity_autoLoginCheckBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loginActivity_autoLoginCheckBox" />

    <Button
        android:id="@+id/loginActivity_loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/loginActivity_loginButton_text"
        app:layout_constraintTop_toBottomOf="@+id/loginActivity_autoLoginCheckBox"
        android:enabled="false"
        tools:layout_editor_absoluteX="152dp" />

    <TextView
        android:id="@+id/loginActivity_areYouNewMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginActivity_areYouNewMessageTextView_text"
        android:layout_marginTop="16dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/loginActivity_registerTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginActivity_loginButton" />

    <TextView
        android:id="@+id/loginActivity_registerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginActivity_registerTextView_text"
        android:textColor="@color/kati_red"
        android:layout_marginTop="16dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/loginActivity_areYouNewMessageTextView"
        app:layout_constraintTop_toBottomOf="@+id/loginActivity_loginButton" />
</androidx.constraintlayout.widget.ConstraintLayout>