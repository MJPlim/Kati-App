<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="1dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newFoodItem_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newFoodItem_foodImageView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/newFoodItem_productNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="행복한찜닭-DMC점"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/newFoodItem_starIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newFoodItem_productNameTextView"
            app:srcCompat="@drawable/ic_baseline_star_24"
            app:tint="@color/kati_orange" />

        <TextView
            android:id="@+id/newFoodItem_ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="0.5dp"
            android:text="4.9"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/newFoodItem_starIcon"
            app:layout_constraintStart_toEndOf="@+id/newFoodItem_starIcon"
            app:layout_constraintTop_toTopOf="@+id/newFoodItem_starIcon" />

        <TextView
            android:id="@+id/newFoodItem_reviewCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="(298)"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/newFoodItem_ratingTextView"
            app:layout_constraintStart_toEndOf="@+id/newFoodItem_ratingTextView"
            app:layout_constraintTop_toTopOf="@+id/newFoodItem_ratingTextView" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/newFoodItem_foodImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_rect"
        android:backgroundTint="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>