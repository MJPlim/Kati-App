<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kati_light_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".kati.domain.nnew.main.favorite.view.FavoriteFragment">

    <com.plim.kati_app.kati.crossDomain.domain.view.etc.JSHToolBar
        android:id="@+id/favorite_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:elevation="5dp"
        app:title="찜" />
    <TextView
        android:id="@+id/favorite_textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/favorite_list"
        android:text="총"
        android:layout_marginLeft="16dp"
        android:layout_marginVertical="16dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/favorite_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/favorite_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginLeft="4dp"
        android:text="0"
        android:textColor="@color/kati_red"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/favorite_list"
        app:layout_constraintStart_toEndOf="@+id/favorite_textView14"
        app:layout_constraintTop_toBottomOf="@+id/favorite_toolbar" />

    <TextView
        android:id="@+id/favorite_textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="개"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/favorite_list"
        app:layout_constraintStart_toEndOf="@+id/favorite_count"
        app:layout_constraintTop_toBottomOf="@+id/favorite_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favorite_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorite_textView14"
        tools:itemCount="3"
        tools:listitem="@layout/item_review_see_at_mykati" />

    <TextView
        android:id="@+id/favorite_noFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="찜한 음식점이 없습니다."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>