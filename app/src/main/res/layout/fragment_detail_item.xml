                android:background="@color/white"
                android:layout_span="2"
                android:layout_marginRight="0dp"
                android:text="input text" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="0dp"
