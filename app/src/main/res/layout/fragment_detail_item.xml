<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/imageFood"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:background="@drawable/food_search_round_rect"
        android:padding="10dp"
        android:layout_marginTop="30dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <ImageView
        android:id="@+id/foodItem_shareImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageFood"
        app:layout_constraintStart_toEndOf="@+id/imageFood"

        app:srcCompat="@drawable/share_icon"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/foodItem_favoriteImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageFood"
        app:layout_constraintStart_toEndOf="@+id/foodItem_shareImageView"

        app:srcCompat="@drawable/ic_baseline_favorite_border_24"
        app:tint="@color/black" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/foodItem_detailTable"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageFood"

        android:background="@color/kati_yellow"
        android:padding="0dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="1dp">

            <TextView
                android:layout_width="5dp"
                android:layout_height="42dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@color/kati_yellow"

                android:text="제품정보 " />

            <TextView
                android:layout_width="5dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:text="" />
            <TextView
                android:layout_width="5dp"
                android:layout_height="42dp"

                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"

                android:text="" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <TextView
                android:layout_width="5dp"
                android:layout_height="42dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@color/white"

                android:text="제품명" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:layout_marginRight="0dp"
                android:layout_span="2"

                android:text="input text" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <TextView
                android:layout_width="5dp"
                android:layout_height="42dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@color/white"

                android:text="유통기한" />

