<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kati.domain.old.food.foodReview.FoodReviewWriteFragment">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/foodReviewWriteFragment_productImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/foodReviewWriteFragment_reviewAskTitle"
            style="@style/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제품은 어떠셨어요?"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/foodReviewWriteFragment_productNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제품이름"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodReviewWriteFragment_manufacturerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="회사 이름"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foodReviewWriteFragment_firstStar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_star" />

            <ImageView
                android:id="@+id/foodReviewWriteFragment_secondStar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/icon_star" />

            <ImageView
                android:id="@+id/foodReviewWriteFragment_thirdStar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/icon_star" />

            <ImageView
                android:id="@+id/foodReviewWriteFragment_fourthStar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/icon_star" />

            <ImageView
                android:id="@+id/foodReviewWriteFragment_fifthStar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/icon_star" />

        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/foodReviewWriteFragment_submitButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/food_review_write_button"
        android:text="완료"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/foodReviewWriteFragment_reviewWriteEditText"
        android:layout_width="0dp"
        android:layout_height="134dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="26dp"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="top|left"
        android:hint="제품에 대한 솔직한 리뷰를 남겨주세요."
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <ImageView
        android:id="@+id/foodReviewWriteFragment_photoInsertButton"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_photo_camera_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodReviewWriteFragment_reviewWriteEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>